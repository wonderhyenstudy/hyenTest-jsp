    <select id="selectList" resultType="com.busanit501.jsp_server_project1.springex_new_0219_keep.domain.TodoVO">
        select *
        from tbl_todo
        <include refid="search"></include>
        order by tno desc limit #{skip}, #{size}
    </select>


    <!--전체 갯수 조회-->
    <!-- skip ->>>>  PageRequestDTO.java 에서 getSkip 으로 MyBatis 가 자동으로 연결 -->
    <select id="getCount" resultType="int">
        select count(tno)
        from tbl_todo
        <include refid="search"></include>
    </select>

    <!-- selectList 에서 사용할 include 용 -->
    <!--    재사용으로 이용되는 검색 sql -->
    <sql id="search">
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=")" separator=" OR ">
                    <if test="type == 't'.toString()">
                        title like concat('%',#{keyword},'%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer like concat('%',#{keyword},'%')
                    </if>
                </foreach>
            </if>

            <if test="finished">
                <trim prefix="and">
                    finished
                </trim>
            </if>

            <if test="from != null and to != null">
                <trim prefix="and">
                    dueDate between #{from} and #{to}
                </trim>
            </if>
        </where>
    </sql>




